@using AnalitFramefork.Components
@using AnalitFramefork.Hibernate.Models
@{
	ViewBag.Title = "Список прав";
	Layout = "~/Views/Shared/_Layout.cshtml";
	ModelFilter<Admin> pager = ViewBag.Pager;
	var profileNews = pager.GetItems();
}

<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
	<table id="table-2" class="table table-bordered table-striped datatable dataTable no-footer" role="grid" aria-describedby="table-2_info">
		<thead>
		<tr role="row">
			<th class="sorting" tabindex="0" aria-controls="table-2">
				<a href="@pager.OrderBy(s => s.Id)">Номер</a>
			</th>
			<th class="sorting" tabindex="0" aria-controls="table-2">
				<a href="@pager.OrderBy(s => s.UserName)">Поставщик</a>
			</th>
			<th class="sorting" tabindex="0" aria-controls="table-2">
				<a href="@pager.OrderBy(s => s.Email)">Заголовок</a>
			</th>
			<th tabindex="0" aria-controls="table-2">Действие</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var item in profileNews) {
			<tr role="row" class="odd">
				<td class="sorting_1">
					<span>@item.Id</span>
				</td>
				<td>
					<span>@item.UserName</span></td>
				<td>
					<span>@item.Email</span></td>
				<td>
					<a class="btn btn-green btn-sm btn-icon icon-left" href="@Url.Action("ManageAdminPermission", "AdminPermissions", new {item.Id})">
						<i class="entypo-brush"></i>
						Изменить права
					</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
	<div class="row">
		@{ Html.RenderPartial("Pagination"); }
	</div>
</div>