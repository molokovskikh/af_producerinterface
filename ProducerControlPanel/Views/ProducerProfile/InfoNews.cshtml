@using ProducerInterface.Models
@{
	ViewBag.Title = "Добавить новость";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var profileNews = (ViewBag.CurrentProfileNews as ProfileNews);
}


@{
	<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
			@Html.HiddenFor(s => profileNews.Id)
			<div class="row buffer-top">
				<div class="form-group col-lg-4">
					<label class="col-lg-4 control-label"><strong>Поставщик</strong>:</label>
					<div class="col-lg-8">
						<span>@profileNews.Producer.Name</span>
					</div>
				</div>
			</div>
			<div class="row buffer-top">
				<div class="form-group col-lg-4">
					<label class="col-lg-4 control-label"><strong>Заголовок</strong>:</label>
					<div class="col-lg-8">
						@profileNews.Topic
					</div>
				</div>
			</div>
			<div class="row buffer-top">
				<div class="form-group col-lg-4">
					<label class="col-lg-4 control-label"><strong>Содержание</strong>:</label>
					<div class="col-lg-8">
						@profileNews.Text
					</div>
				</div>
			</div>
			<div class="row buffer-top">
				<a class="btn btn-blue btn-sm btn-icon icon-left" href="@Url.Action("ListNews")">
					<i class="entypo-left-open"></i>
					Назад
				</a>
			</div>
	</div>
}