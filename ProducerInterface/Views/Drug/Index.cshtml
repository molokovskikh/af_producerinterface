@model IEnumerable<ProducerInterface.Models.drugfamily>

@{
	ViewBag.Title = "Список препаратов производителя";
}

<h4>@ViewBag.Title</h4>

<div class="row">
    <div class="col-md-8"><b>Наименование</b></div>
    <div class="col-md-4"><b>Действие</b></div>
</div>
@foreach (var item in Model) {
    <div class="row">
        <div class="col-md-8">@item.FamilyName</div>
        <div class="col-md-4">@Html.ActionLink("Описание", "EditDescription", new { id = item.FamilyId })</div>
    </div>
}

