@using ProducerInterfaceCommon.CatalogModels
@using ProducerInterfaceCommon.ContextModels
@model Descriptions

@{
  var title = $"Описание препарата \"{ViewData["familyName"]}\"";
  ViewBag.Title = title;
  var mnn = (mnn)ViewData["mnn"];
  var list = new List<SelectListItem>() { new SelectListItem() { Text = mnn.Mnn1, Value = mnn.Id.ToString(), Selected = true } };
}

<div class="row">
    <div class="col-md-12">
        <h4>@title</h4>
    </div>
</div>

<hr />
@if (mnn != null)
{


<div>
    @Html.DropDownList("mnn", list)
</div>

