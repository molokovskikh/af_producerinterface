<div>@Html.LabelFor(m => mnn.RussianMnn)</div>
<div>@Html.DisplayTextFor(m => mnn.RussianMnn)</div>
}
else
{

}
<hr/>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm()) {
            <fieldset>
                @Html.ValidationSummary(true)
                @Html.Hidden("familyId", ViewData["familyId"])
                @Html.EditorFor(m => m)
                @Html.Hidden("url", Url.Action("EditDescriptionField", "Drug"))
            </fieldset>
        }
    </div>
</div>

<div class="row margin5">
    <div class="flabel col-md-12">
        @Html.ActionLink("К списку препаратов", "Index")
    </div>
</div>


@section JavaScript {
    <script src="~/Content/Chosen/js/chosen.jquery.js"></script>
    <script src="~/Content/Chosen/js/ajax-chosen.g.js"></script>
    <script src="~/Content/Chosen/js/initDrug.js"></script>
}

@section Styles {
    <link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
}

