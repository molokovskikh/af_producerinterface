    @Html.ListBoxFor(m => mnn.Mnn1, new SelectList(new List<OptionElement>() { new OptionElement() {Text = mnn.Mnn1, Value = mnn.Id.ToString() } }, "Value", "Text", mnn.Id))
</div>*@


<div>@Html.LabelFor(m => mnn.Mnn1)</div>
<div>@Html.DisplayTextFor(m => mnn.Mnn1)</div>
