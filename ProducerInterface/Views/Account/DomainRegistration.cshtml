@model ProducerInterfaceCommon.ContextModels.RegisterDomainValidation
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">

    <h2>Регистрация</h2>

    <hr/>

@using(Html.BeginForm("DomainRegistration", "Account", FormMethod.Post))
{
        @Html.ValidationSummary(true, "")

        @Html.HiddenFor(m => m.Producers)
        <h3>Компания : @Model.ProducerName</h3>
        <hr/>
		  
		<div class="form-group">
		<label>Почтовый адресс (введите имя и выберите доменное имя)</label>
        <div class="input-group">
	         @Html.EditorFor(m => m.Mailname)
	        <div class="input-group-btn" style="min-width: 175px;">
		       @Html.EditorFor(m => m.EmailDomain)
	        </div>
        </div>
		  @Html.ValidationMessageFor(model => model.Mailname)
		  @Html.ValidationMessageFor(model => model.EmailDomain)

        
		</div>

        <div class="form-group">
            <a data-toggle="modal" data-target="#myModal" class="btn btn-primary"><span class="glyphicon glyphicon-envelope"></span> Домена нет в списке (обратная связь)</a> 
        </div>

	        @Html.EditorFor(m => m.Name)

	        @Html.EditorFor(m => m.PhoneNumber)
	        @Html.EditorFor(m => m.AppointmentId)

	        <br/>

	        <div class="form-group">
		        <input type="submit" class="btn btn-primary col-lg-12 col-sm-12 col-md-12 col-xs-12" value="Регистрация"/>
	        </div>
	        <div class="form-group">
		        <a href="~/Registration/Index" class="">Я уже регистрировался</a>
	        </div>
	        <div class="form-group">
		        <a href="~/Registration/PasswordRecovery" class="">Забыли пароль?</a>
	        </div>

}
</div>

@section JavaScript{
<script src="~/Scripts/jquery.maskedinput.min.js"></script>
<script src="~/Scripts/WorkPlace/InitRegistrationAddAppointment.js"></script>
}
