@using ProducerInterfaceCommon.ContextModels;

@model LoginValidation

@{
    ViewBag.Title = "Авторизация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container body-content">
    <h2>Для входа на сайт введите ваш логин (Email) и пароль</h2>

    @using (Html.BeginForm("UserAuthentication", "Account"))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label>Логин</label>
            @Html.TextBoxFor(m => m.login, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.login)

        </div>
        <div class="form-group">
            <label>Пароль</label>
            @Html.TextBoxFor(m => m.password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.password)
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Вход" />
        </div>
        <div class="form-group">
            <a href="@Url.Action("Index")">Я ещё не регистрировался</a>
            <br/>
            <a href="@Url.Action("PasswordRecovery")">Забыли пароль?</a>
        </div>
    }

</div>


