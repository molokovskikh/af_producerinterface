@using Quartz.Job.Models
@model List<Quartz.Job.EDM.jobextend>

@using (Html.BeginForm("AddJob", "Report", FormMethod.Get)) {
    <section id="main">
        <header class="page-header">
            <div class="container">
                <h1>Новый отчет</h1>
            </div>
        </header>
        <div class="container">
            <div class="row">
                @Html.DropDownList("id", EnumHelper.GetSelectList(typeof(Reports)), new { @class = "form-control" })
                <input id="btn" type="submit" value="Создать" class="btn btn-success"/>
            </div>
        </div>
    </section>
}
@{ Quartz.Job.EDM.jobextend dummyModel = null; }
@if (Model != null && Model.Count > 0) {
    
  <section id="main">
        <header>
            <div class="container">
                <h1>Список отчетов</h1>
            </div>
        </header>
        <div class="container">
            <div class="row">
                <div class="content blog col-sm-12 col-md-12">
                    <table class="table table-striped table-bordered text-left my-orders-table">
                        <tr class="first last">
                            <th>
                                @Html.DisplayNameFor(model => dummyModel.CustomName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => dummyModel.Scheduler)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => dummyModel.ReportTypeEnum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => dummyModel.Creator)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => dummyModel.LastModified)
                            </th>
                            <th>Действия</th>
                        </tr>

                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomName)
                                </td>
                                <td>
                                    @Html.ActionLink(item.Scheduler, "ScheduleJob", new { jobName = item.JobName, jobGroup = item.JobGroup })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReportTypeEnum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Creator)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastModified)
                                </td>
                                <td>
                                    @Html.ActionLink("Ред.", "Edit", new { jobName = item.JobName, jobGroup = item.JobGroup }, new { @class = "btn btn-sm btn-info" })
                                    @Html.ActionLink("Пуск", "RunNow", new { jobName = item.JobName, jobGroup = item.JobGroup }, new { @class = "btn btn-sm btn-success" })
                                    @Html.ActionLink("Удал.", "Delete", new { jobName = item.JobName, jobGroup = item.JobGroup }, new { @class = "btn btn-sm btn-warning" })
                                    @*@Html.ActionLink("Restore", "Restore", new { jobName = item.JobName, jobGroup = item.JobGroup })*@
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </section>
}