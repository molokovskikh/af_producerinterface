@using ProducerInterfaceCommon.ContextModels
@model long?


<div class="body-content">

     @{
        var listReport = new List<SelectListItem>();
        listReport.Add(new SelectListItem() { Value = "", Text = "Выберите тип отчета, который вы хотите создать", Selected = true });
        listReport.AddRange(EnumHelper.GetSelectList(typeof(Reports)));

        var descr = (Dictionary<int, string>)ViewData["descr"];
    }

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm()) {
                <div class="form-group">
                    <h4>Создание нового отчета</h4>

                    <div class="row">
                        <div class="col-xs-4">
                            @Html.DropDownList("id", listReport, new { @class = "form-control" })
                            @Html.ValidationMessage("id")
                        </div>
                        <div class="col-xs-1">
                            <input id="btn" type="submit" value="Создать" class="btn btn-primary" disabled="disabled" />
                        </div>
                        <div class="col-xs-7">
                            @foreach (var d in descr) {
                                <div id="@('d' + d.Key.ToString())" class="descr" style="display: none">@d.Value</div>
                            }
                        </div>
                    </div>               
                </div>             
            }
        </div>
    </div>
    <hr />

    @Html.Action("SearchResult", Model)

</div>

@section JavaScript {  
    <script src="~/Content/Chosen/js/initJobList.js"></script>
}


