@{
var user = ViewBag.CurrentUser;
}


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="serverMessageCleanForm()">Закрыть</button>
                <h4 class="modal-title">Ваши пожелания, сообщение об ошибке</h4>
            </div>

            <div class="modal-body" id="ModalBodyId">

		 @using(Ajax.BeginForm("index", "feedback", null,
            new AjaxOptions{HttpMethod = "POST", OnBegin = "SendMessage",UpdateTargetId="footer_model_message"}))
 {
     <input id="PageUrl" name="PageUrl" hidden="hidden" value="---"/>

	       <div class="form-group">        
                    <div class="form-group">                     
                        <textarea clsss="form-control" rows="5" name="Id" id="Id" style="width:100%;"></textarea>
                    </div>
                <div class="form-group">

                    @if(user != null)
                    {
                    <label>Выберите удобный варинт связи с вами</label>
                    <select type="input" id="UdobstvaSvyazi" name="UdobstvaSvyazi" class="form-control">
                      <option value="@user.Login">@user.Login</option>
                      <option value="@user.Phone">@user.Phone</option>
                    </select>
                    }
                    else
                    {
                    <label>Укажите ваш email или номер телефона</label>
                    <input id="UdobstvaSvyazi" name="UdobstvaSvyazi" class="form-control" />
                    }

                
                  </div>
                  
                    <div class="form-group">
                        <input class="btn btn-primary" id="sendMessageButton" type="submit" value="Отправить" />
                    </div>
			 </div> 
}
            </div> 
    <div class="modal-footer" id="footer_model_message" style="opacity:0; display:none;">
               
				<div id="SendMessage">
				<p>Отпарвка сообщения серверу</p>
				</div>		
				             
            </div>
		

          
          
        </div>

    </div>
</div>