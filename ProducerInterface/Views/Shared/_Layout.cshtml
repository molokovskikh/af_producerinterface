@using ProducerInterfaceCommon.ContextModels
@using System.Web.Mvc.Html

@{
    var user = ViewBag.CurrentUser;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Аналит @ViewBag.Title</title>

    <link href="~/Content/Chosen/css/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body name="main_container" class="main_container" id="main_container">
      
    <div class="server-message" style="font-size:1.5em; text-align:center;"></div>

     @Html.Partial("MenuPartialView")

    <div class="container body-content">
      
            @RenderBody()
      
        <footer class="panel-footer navbar-fixed-bottom">
            <center>             
                <p>&copy; @DateTime.Now.Year – Аналит Фармация | E-mail: <a href="mailto:marketing@analit.net">marketing@analit.net</a></p>
            </center>
        </footer>
    </div>
  
  
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    @if (user == null)
    {
        @Scripts.Render("~/bundles/jqueryval")
    }

    @Html.Partial("ModelSendErrorMessageForAminPartial")

    <script src="~/Scripts/WorkPlace/Analit.js"></script>
    <script src="~/Scripts/WorkPlace/ZAnalit.js"></script>
    @RenderSection("JavaScript", required: false)
</body>
</html>
