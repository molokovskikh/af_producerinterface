@using ProducerInterface.Models
@using System.Web.Mvc.Html
@model ProducerInterface.Models.LoginValidation

@{
    var user = ViewBag.CurrentUser;

}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Аналит @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="server-message" style="font-size:1.5em; text-align:center;"></div>

    <div class="navbar navbar-fixed-top navbar-default">
        <div class="container">
            <div class="navbar-header navbar-left">
                <button type="button" class="navbar-toggle navbar-left" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <a href="@Url.Action("Index","Home")" class="navbar-brand">
                    <img class="image-brand" src="~/Content/Image/aflogo.png" />
                </a>        
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home"></span> Главная</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right" role="navigation">
                    @if (user != null)
                    {
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle"> <span class="glyphicon glyphicon-align-justify"></span>&nbsp; Разделы сайта</a>

                            <ul class="dropdown-menu">
                                <li><a href="/Report/JobList">Отчеты</a></li>
                                <li><a href="#">Акции</a></li>
                                <li><a href="#">Описания препаратов</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown"> <span class="glyphicon glyphicon-user"></span>&nbsp; @user.Email</a>

                            <ul class="dropdown-menu">
                                <li><a href="/Profile/Index">Кабинет произврдителя</a></li>
                                <li><a href="/Registration/LogOut">Выход</a></li>
                            </ul>
                        </li>    
                                    
                    }
                    else
                    {
                    <li><a href="@Url.Action("Registration", "Registration")"><span class="glyphicon glyphicon-ok-sign" style="margin-right:0.5em;"></span> Регистрация</a></li>
                    <li class="dropdown">
                       
                                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                    <span class="glyphicon glyphicon-user" style="margin-right:0.5em;"></span> Вход на сайт <span class="caret"></span>
                                </a>
                                <div class="dropdown-menu" style="width:300px; padding:10px; padding-bottom:0px;">
                                    <form method="post" action="~/Registration/UserAuthentication">
                                        <div class="form-group-lg">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.login, null, new { @Name = "login", @class = "form-control col-sm-12 col-xs-12 col-md-12 col-lg-12" , @placeholder="Логин"})
                                                @Html.ValidationMessageFor(model => model.login)
                                                <br/>
                                                @*<input class="form-control input-group-lg" type="text" id="login" Name="login" placeholder="Логин" />*@
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.password, null, new { @Name = "password", @class = "form-control col-sm-12 col-xs-12 col-md-12 col-lg-12", @placeholder="Пароль"})
                                                @Html.ValidationMessageFor(model => model.password)
                                                <br />
                                                @*<input class="form-control input-group-lg" type="password" id="password" Name="password" placeholder="Пароль" />*@
                                            </div>
                                            <div class="form-group col-lg-12 col-sm-12 col-xs-12 col-md-12">

                                                <input type="submit" class="btn btn-primary col-lg-12 col-sm-12 col-xs-12 col-md-12" value="Войти" />
                                            </div>
                                            <div class="form-group">
                                                <center>
                                                    <a href="#">Забыли пароль?</a>
                                                </center>
                                            </div>
                                        </div>
                                    </form>
                                </div>                                        
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="otstup"></div>
        @RenderBody()
        <footer class="panel-footer navbar-fixed-bottom">
            <center>
                <p>&copy; @DateTime.Now.Year – Аналит Фармация | Телефон:8-800-555-46-88</p>
            </center>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/WorkPlace/Analit.js"></script>
    <script src="~/Scripts/WorkPlace/ZAnalit.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
