@using ProducerInterfaceCommon.ViewModel.Interface.Promotion
@model IEnumerable<PromotionUi>
@{
    ViewBag.Title = "Акции";
    Layout = "~/Views/Shared/_Layout.cshtml";   
}
<div class="container body-content">

    <div class="content panel-body">
        <h3 class="title">@ViewBag.Title<a href="@Url.Action("Edit")" class="btn btn-primary pull-right">Добавить акцию</a>
        </h3> 
    </div>

    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="panel-group">
            @foreach (var item in Model)
            {
            @Html.Partial("PromotionItem", item)

            <hr/>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="content blog col-sm-9 col-md-9">
                <h4>Акций не зарегистрировано</h4>
            </div>
        </div>
    }
</div>