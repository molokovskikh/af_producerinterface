@using ProducerInterfaceCommon.ViewModel.Interface.Global;
@model FeedBack
@{
    ViewBag.Title = "Обратная связь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm()) {
        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @rows = "5", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Contact)
            <select id="Contact" name="Contact" class="form-control">
                <option value="@Model.Email">@Model.Email</option>
                @if (!string.IsNullOrEmpty(Model.PhoneNum))
                {
                    <option value="@Model.PhoneNum">@Model.PhoneNum</option>
                }
            </select>                     
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Отправить" />
        </div>
    }
</div>


