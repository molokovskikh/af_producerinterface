@using ProducerInterface.Models


@{
	ViewBag.Title = "title";
	var user = ViewBag.CurrentUser as ProducerUser;
	var drugFamily = ViewBag.DrugFamily as DrugFamily;
}
<section id="main">
	<div class="container">
		<div class="row">
			<div class="content blog col-sm-9 col-md-9">
					<table class="table table-striped table-bordered table-condensed">
						<thead>
							<tr>
								<th>Наименование</th>
								<th>Действие</th>
							</tr>
						<tbody>	
								@{ var families = user.Producer.Drugs.Select(i => i.DrugFamily).Distinct(); }
								@foreach (var family in families)
								{
									var activestring = drugFamily == family ? "active" : "";
									<tr>
										<td class="@activestring">
											<span class="pull-left">@family.Name</span>
										</td>
										<td class="@activestring">
												<a class="btn btn-xs btn-primary" href="@Url.Action("Catalog", new {id = family.Id})">Описание</a>	
										</td>
									</tr>
								}
						</tbody>
						</thead>
					</table>
			</div><!-- .content -->
			<div id="sidebar" class="sidebar col-sm-3 col-md-3">
				@{ Html.RenderPartial("ProfileMenu"); }
			</div><!-- .sidebar -->
		</div>
	</div>
	<!-- .container -->
</section>