@using ProducerInterface.Models

@model promotions
@{
    ViewBag.Title = "Добавить новость";
    Layout = "~/Views/Shared/_Layout.cshtml";   
 
}


    <div class="row">
    <h1 class="title">Здравствуйте, @ViewBag.CurrentUser.Name !</h1>
    <h3>Новая акция</h3>

    <b style="color: red">
        На данной странице создается и редактируется акция. Сначала акция создается, потом пользователь перенаправляется на страницу ее редактирования, где может добавить препараты в акцию.
    </b>
        <br/>
    <a href="@Url.Action("Promotions")" class="btn btn-primary">Назад</a>
    @using (Html.BeginForm("ManagePromotion", "Profile", FormMethod.Post))
    {
        @Html.HiddenFor(s => s.Id)

        <div class="form-group">
            <label class="control-label">Заголовок:</label>
            @Html.TextBoxFor(s => s.Name, new { @Name = "promotion.Name", @Class = "form-control width-default", @Placeholder = "Заголовок" })
        </div>
            <div class="form-group">
                <label class="control-label">Дата начала:</label>
                @Html.TextBoxFor(m=>m.Begin, new { @class="form-control"})             
            </div>
            <div>
                <label class="control-label">Дата конца:</label>
                @Html.TextBoxFor(m => m.Begin, new { @class = "form-control" })            
            </div>
            <div class="form-group">
                <label class="control-label">Содержание:</label>
                @Html.TextAreaFor(Model => Model.Annotation, new { @Class = "form-control width-default", @Rows = "7" })
            </div>     
            <label>Список лекарств, участвующих в акции: </label>   
                @Html.EditorFor(Model => Model.DrugList)  

            <div class="col-xs-12 col-sm-6 col-md-6 box">
                <button type="submit" class="btn btn-primary filter-buttons active-form">@(Model != null && Model.Id != 0 ? "Обновить акцию" : "Добавить Акцию")</button>
            </div>   
    }
</div>

@section JavaScript
{   
<script src="~/Content/Chosen/js/chosen.jquery.js"></script> 
<link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
<script src="~/Content/Chosen/js/InitPromotionGrugList.js"></script>
}
