@using ProducerInterfaceCommon.ContextModels
@using ProducerInterfaceCommon.Heap

@model IEnumerable<AccountPermission>

@{
  ViewBag.Title = "Список доступов";
  Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (Model != null && Model.Any())
{
<table class="table table-striped table-bordered">
    <tr>
        <th>Проект</th>
        <th>Номер</th>
        <th>Наименивание доступа</th>
        <th>Глагол</th>
        <th>Описение</th>
        <th>Редактирование</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@AttributeHelper.DisplayName((TypeUsers)item.TypePermission)</td>
        <td>@item.Id</td>
        <td>@item.ControllerAction</td>
        <td>@item.ActionAttributes</td>
        <td>@item.Description</td>
        <td>
            <a href="@Url.Action("EditPermission", new { Id = item.Id })">Редактировать</a>
        </td>
    </tr>
    }
</table>
}
