@using ProducerInterfaceCommon.ContextModels
@using ProducerInterfaceCommon.Heap
@model AccountGroup
@{
    ViewBag.Title = $"Редактирование группы {Model.Name} проекта {((TypeUsers)Model.TypeGroup).DisplayName()}";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

@section navigation{
    <div class="body-content affix-top">
        <div class="row">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Group", "PermissionUser")">Список групп</a>
                </li>
                <li class="active">Редактировать группу</li>
            </ol>
        </div>
    </div>
}
<h2>@ViewBag.Title</h2>
<hr/>

@using (Html.BeginForm("GroupChangeSave", "PermissionUser", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);

    <div class="form-group">
        <label>Название</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" , @placeholder="Обязательный параметр"})
    </div>
    <div>
        <label>Описание</label>
        @Html.TextBoxFor(m=>m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Пользователи</label>
        @Html.EditorFor(m => m.ListUser)
    </div>
    <div class="form-group">
        <label>Права</label>
        @Html.EditorFor(m => m.ListPermission)
    </div>
    <div class="form-group">
        <input class="btn btn-primary" value="Сохранить" type="submit" />
    </div>

}


@section scripts
{
    <script src="~/Content/Chosen/js/chosen.jquery.js"></script>
    <link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
    <script src="~/Content/Chosen/js/initChangeGroupPermission.js"></script>
}