<div id="ModalFeedBackItem" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-full">
        <div class="modal-content modal-content-full">

            <div class="modal-header">  
                    <button  type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Обращение номер № <span data-bind="text:Id"></span></h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label>Текст обращения</label>
                            <p data-bind="text:Description"></p>
                        </div>
                        <div class="form-group">
                            <label>Статус</label>
                            <select data-bind="foreach: StatusList, value: Status" class="form-control">
                                <option data-bind="text: Text, value: Value"></option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Введите комментарий</label>
                            <textarea class="form-control" rows="3" data-bind="value: Comment"></textarea>
                        </div>
                        <div class="form-group">                         
                            <a class="btn btn-primary" data-bind="click: Event_ChangeStatus">Добавить комментарий / изменить статус обращения</a>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>

<style>
    .modal-dialog-full {
        width: 80%;
        height: 100%;
    }

    .modal-content-full {
        height: 100%;
    }
</style>