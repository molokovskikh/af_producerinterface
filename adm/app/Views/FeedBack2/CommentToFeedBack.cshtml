@using ProducerInterfaceCommon.ViewModel.ControlPanel.FeedBack;
@model FeedBackComment

@{
  ViewBag.Title = $"Обращение #{Model.Id}";
  Layout = "~/Views/Shared/_MasterPage.cshtml";
}
<h2>@ViewBag.Title</h2>

@section navigation{
    <div class="body-content affix-top">
        <div class="row">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "FeedBack2")">Обращения пользователей</a>
                </li>
                <li class="active">Подробнее</li>
            </ol>
        </div>
    </div>
}
@using (Html.BeginForm()) {
    <div class="row">
        <div class="col-md-12">
            <div class="form-group" style="width: 600px;">
                @Html.LabelFor(m => m.Description)<br/>
                @Html.DisplayFor(m => m.Description)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.DropDownListFor(m => m.Status, Model.StatusList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Comment)
                @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @rows = 3 })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
            </div>
        </div>
    </div>
}
<hr/>

@foreach (var item in Model.CommentList)
{
<div>
    <p style="font-weight: bold;">@Html.DisplayFor(m => item.DateAdd) @item.Account.Login</p>
    <p>@item.Comment</p>
</div>
}
