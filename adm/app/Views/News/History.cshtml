@model ProducerInterfaceCommon.Models.NewsSnapshot

@{
    ViewBag.Title = "История изменений";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<div class="row">
    <div class="container">

        <h4>@Model.SnapshotName @Model.CreatedOn.ToShortDateString()</h4>

        <div class="row">

            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#NewsTab_New">Стало</a></li>
                <li><a data-toggle="tab" href="#News_Tab_Old">Было до внесения изменений</a></li>
            </ul>
            <div class="tab-content">

                <div id="NewsTab_New" class="tab-pane fade in active">
                    <br/>
                    <label>Тема</label>
                    <p>@Model.Subject</p>

                    <label>Сообщение</label>
                    <p>@Html.Raw(Model.Body)</p>
                </div>

                <div id="News_Tab_Old" class="tab-pane fade">
                    <br />
									@if (ViewBag.Old != null) {
										<label>Тема</label>
										<p>@ViewBag.Old.Subject</p>

										<label>Сообщение</label>
										<p>@Html.Raw(ViewBag.Old.Body)</p>
									}
                </div>
            </div>
        </div>
    </div>
</div>

