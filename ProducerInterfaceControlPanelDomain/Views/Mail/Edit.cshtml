@model ProducerInterfaceControlPanelDomain.Models.mailform

@{
    ViewBag.Title = "Изменения Шаблона Сообщения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Назначеине сообщения  @Html.DisplayFor(m=>m.Description)</h2>

<hr/>

<div class="jumbotron">

    @using(Html.BeginForm("Edit", "Mail"))
    {

        @Html.HiddenFor(model=>model.Id)

        <div class="form-group">
            <p>Тема сообщения</p>
            @Html.TextBoxFor(model=>model.Subject, new {@class="form-control"})

        </div>

        <div class="form-group">
            <p>Текст сообщения</p>
            @Html.TextAreaFor(model=>model.Body, new {@class="form-control", @rows = "5" })
        </div>

        <div class="form-group">        
            <input hidden="hidden" id="IsBodyHtml" value="false" /> 
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Сохранить изменения" />
        </div>
    }
</div>


