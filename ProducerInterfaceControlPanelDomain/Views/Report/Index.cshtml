@model ProducerInterfaceCommon.ContextModels.SearchProducerReportsModel


@{
    ViewBag.Title = "Отчёты Производителей";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}
<br />
<h3>Поиск отчетов Производителей</h3>
<hr />




@using (Html.BeginForm("SearchReports", "Report", new { HttpMethod = "POST", UpdateTargetId= "SearchResults"}))
{
    <div class="form-group">
        @Html.EditorFor(m => m.Producers)
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Поиск"/>
    </div>
}

@section scripts
{    
<script src="~/Content/Chosen/js/chosen.jquery.js"></script>
<link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
<script src="~/Content/Chosen/js/InitReportSearchChosen.js"></script>
 }