@using ProducerInterfaceCommon.ContextModels
@model IEnumerable<reportrunlogwithuser>

@{
  Layout = "~/Views/Shared/_MasterPage.cshtml";
}

@if (Model != null && Model.Count() > 0)
{
    <h4>@ViewBag.Title</h4>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RunStartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProducerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NowOrShed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MailTo)
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RunStartTime)
                        </td>
                        <td>
                            @if (item.RunNow)
                        {
                                @Html.DisplayFor(modelItem => item.UserName)
                        }
                        else
                        {
                                <span>Робот</span>
                        }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProducerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NowOrShed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ip)
                        </td>
                        <td>
                            <div class="mailto pointer" style="text-decoration: underline;" data-mailto="@item.MailTo">Посмотреть</div>
                        </td>
                    </tr>}
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <h4>Истории запусков отчета не найдено</h4>
        </div>
    </div>
}

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Закрыть</button>
                    <h4 class="modal-title">Список рассылки</h4>
                </div>
                <div class="modal-body" style="z-index: 10000;">
                    НЕЧТО
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">

    $(function () {
        var modal = $("#myModal");
        var content = modal.find("div.modal-body");

        $(".mailto").on("click", function () {
            //var mailto = $(this).data("mailto");
            //content.html(mailto);
            modal.show();
        });
    });

    </script>
}
