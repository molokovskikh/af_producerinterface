@using ProducerInterfaceCommon.ViewModel.ControlPanel.GlobalAccount;
@model RegistrationCustomProfile

@{
    ViewBag.Title = "Подтверждение регистрации пользователя";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<div class="container">
    
    <h2>Подтверждение регистрации пользователя @Model.Login</h2>

    @using (Html.BeginForm("AccountVerification", "globalaccount"))
    {

        @Html.HiddenFor(m=>m.Id)
        @Html.HiddenFor(m=>m.CompanyId)
        
        <div class="row">
            @Html.EditorFor(m => m.CompanyName)
            <div class="col-xs-12">
                <p>Оставьте поле пустым, если пользователь - Физическое лицо</p>
            </div>
            @Html.EditorFor(m => m.LastName)
            @Html.EditorFor(m => m.FirstName)
            @Html.EditorFor(m => m.OtherName)
            @Html.EditorFor(m => m.Login)
            @Html.EditorFor(m => m.Phone)
        </div>
        <div class="row">
            @Html.EditorFor(m => m.AppointmentId)
            @Html.EditorFor(m => m.SelectedGroupList)
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить и отправить пользователю по почте пароль" class="btn btn-primary"/>
        </div>
    }

</div>

@section scripts
{   
<script src="~/Content/Chosen/js/chosen.jquery.js"></script>    
<link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
<script src="~/Scripts/jquery.maskedinput.min.js"></script>
<script src="~/Scripts/WorkPlace/GlobalAccount_AccountVerification.js"></script>
}