@using ProducerInterfaceCommon.ContextModels;
@model Statistics

@{
  ViewBag.Title = "Статистика";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <h4>Зарегистрировано</h4>
        <ul>
            <li>@Html.DisplayFor(m => m.ProducerCount) @Html.DisplayNameFor(m => m.ProducerCount)</li>
            <li>@Html.DisplayFor(m => m.NotProducerCount) @Html.DisplayNameFor(m => m.NotProducerCount)</li>
        </ul>

        <ul>
            <li>@Html.DisplayFor(m => m.ActionCount) @Html.DisplayNameFor(m => m.ActionCount)</li>
            <li>@Html.DisplayFor(m => m.AcceptedActionCount) @Html.DisplayNameFor(m => m.AcceptedActionCount)</li>
            <li>@Html.DisplayFor(m => m.ActiveActionCount) @Html.DisplayNameFor(m => m.ActiveActionCount)</li>
        </ul>

        <ul>
            <li>@Html.DisplayFor(m => m.UserCount) @Html.DisplayNameFor(m => m.UserCount)</li>
            <li>@Html.DisplayFor(m => m.ActiveUserCount) @Html.DisplayNameFor(m => m.ActiveUserCount)</li>
            <li>@Html.DisplayFor(m => m.NewUserCount) @Html.DisplayNameFor(m => m.NewUserCount)</li>
            <li><a href="@Url.Action("Index", "PermissionUser", new { Status = (int)UserStatus.Request })">@Html.DisplayFor(m => m.RequestUserCount) @Html.DisplayNameFor(m => m.RequestUserCount)</a></li>
            <li>@Html.DisplayFor(m => m.BlockedUserCount) @Html.DisplayNameFor(m => m.BlockedUserCount)</li>
        </ul>

        <ul>
            <li>@Html.DisplayFor(m => m.ReportCount) @Html.DisplayNameFor(m => m.ReportCount)</li>
        </ul>
        <ul>
            <li><a href="@Url.Action("Index", "FeedBack2", new { Status = (int)FeedBackStatus.New })">@Html.DisplayFor(m => m.FeedBackNewCount) @Html.DisplayNameFor(m => m.FeedBackNewCount)</a></li>
        </ul>
    </div>
</div>


