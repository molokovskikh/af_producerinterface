@model IEnumerable<ProducerInterfaceCommon.ContextModels.NotificationToProducers>

@{ 
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}
    <div class="container">
        <h2>@ViewBag.Title</h2>

        <hr />

      

        @if (ViewBag.Title == "Новости")
        {  <a href="~/News/Create" class="btn btn-primary">Создать новость</a>  <a href="~/News/Archive" class="btn btn-primary">Архив новостей</a>   }
        else {  <a href="~/News/List" class="btn btn-primary">К списоку новостей</a>   }
        <hr />

        @if (Model != null && Model.Any())
        {
            foreach (var NewsItem in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div>
                            @NewsItem.Name
                            <div class="pull-right">@NewsItem.DatePublication.Value.ToString("dd-MM-yyyy")</div>
                        </div>
                    </div>
                    <div class="panel-body">                      
                        <div class="form-group">
                            @if (ViewBag.Title == "Новости")
                            {
                            <a href="@Url.Action("Create", new { Id = NewsItem.Id })" class="btn btn-primary">Редактировать</a>
                           <a href="@Url.Action("DeleteNews", new { id = NewsItem.Id })" class="btn btn-primary">В архив (публикация новости прекращается)</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Create", new { Id = NewsItem.Id })" class="btn btn-primary">Редактировать с последующей публикацией</a>
                                <a href="@Url.Action("PastRetrieve", new { id = NewsItem.Id })" class="btn btn-primary">Безвозвратно удалить</a>
                            }

                        </div>

                        <div class="form-group">
                            <label>История изменений</label>
                            @foreach (var HistoryItem in NewsItem.NewsChange)
                            {
                                <p>@HistoryItem.DateChange @HistoryItem.Account.Name @HistoryItem.GetDisplayNewsTypeChange <a title="Посмотреть изменения" href="@Url.Action("History", new {Id = HistoryItem.Id })"><i class="glyphicon glyphicon-info-sign"></i></a></p>

                            }
                        </div>

                    </div>     
                </div>
            }

            if (Model != null && Model.Count() == 10 && ViewBag.Title == "Новости")
            {

            <div class="row">
                <div id="@("LoadingListDiv" + ViewBag.Pager)" class="col-xs-12">
                </div>
            </div>

            <div id=@("Delete_Id" + ViewBag.Pager)>
                @Ajax.ActionLink("Подгрузить предыдущие новости", "GetNextList", "News",
            new { Pager = ViewBag.Pager },
            new AjaxOptions { UpdateTargetId = ("LoadingListDiv" + ViewBag.Pager), InsertionMode = InsertionMode.InsertAfter, HttpMethod = "GET", OnSuccess = "newsisloadcomplete(" + ViewBag.Pager + ")" },
            new { @class = "btn btn-primary" }
            )
            </div>
            }
        }
        else
        {
            <h3>Список новостей пуст</h3>
        }
    </div>

<script type="text/javascript">
    function newsisloadcomplete(data_int) {
        var ElementId = "#Delete_Id" + data_int;
        $(ElementId).css("display", "none");
    }
</script>
