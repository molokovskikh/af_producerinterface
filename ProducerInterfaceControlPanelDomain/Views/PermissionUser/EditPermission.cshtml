@using ProducerInterfaceCommon.ContextModels
@model ControlPanelPermission

@{
    ViewBag.Title = "Редактирование описание прав";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<hr/>

<h4>Название @Model.ControllerAction | Тип запроса @Model.ActionAttributes </h4>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.HiddenFor(m=>m.Id)

    <div class="form-group">
        @Html.TextBoxFor(m=>m.Description, null, new { @class="form-control"})

    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Сохранить описание"/>
    </div>

}