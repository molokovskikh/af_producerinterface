@model ProducerInterfaceCommon.ContextModels.AccountGroup
@{
    ViewBag.Title = "Изменение конфигурации группы";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>Конфигурирование группы @Model.Name</h2>
<hr/>

@using (Html.BeginForm("GroupChangeSave", "PermissionUser", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);

    <div class="form-group">
        <label>Название группы</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" , @placeholder="Обязательный параметр"})
    </div>
    <div>
        <label>Описание группы</label>
        @Html.TextBoxFor(m=>m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Пользователи, состоящие в группе</label>
        @Html.EditorFor(m => m.ListUser)
    </div>
    <div class="form-group">
        <label>Пермишены группы</label>
        @Html.EditorFor(m => m.ListPermission)
    </div>
    <div class="form-group">
        <input class="btn btn-primary" value="Сохранить изменения" type="submit" />
    </div>

}


@section scripts
{    
<script src="~/Content/Chosen/js/chosen.jquery.js"></script>
<link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
<script src="~/Content/Chosen/js/initChangeGroupPermission.js"></script>
    }