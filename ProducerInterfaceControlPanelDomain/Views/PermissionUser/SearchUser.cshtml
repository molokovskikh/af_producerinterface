@using ProducerInterfaceCommon.ContextModels
@using ProducerInterfaceCommon.Heap
@model IEnumerable<Account>
@{
  Layout = null;
  Dictionary<long, string> producers = ViewBag.Producers;
}


@if (Model != null && Model.Any())
{
@Html.Partial("Partial/Pager")
<table class="table table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>ФИО</th>
        <th>Логин</th>
        <th>Телефон</th>
        <th>Производитель</th>
        <th>Тип</th>
        <th>Статус</th>
        <th>Группы</th>
        <th>Должность</th>
        <th>Изменить</th>
    </tr>
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.Id</td>
        <td>@user.Name</td>
        <td>@user.Login</td>
        <td>@user.Phone</td>
        <td>
            @if (user.AccountCompany.ProducerId.HasValue)
            {
                <span>@producers[user.AccountCompany.ProducerId.Value]</span>
            }
        </td>
        <td>@user.UserType.DisplayName()</td>
        <td>@user.EnabledEnum.DisplayName()</td>
        <td>
            @foreach (var g in user.AccountGroup)
            {
                @Html.ActionLink(g.Name, "GetOneGroup", new { Id = g.Id })
                <span> </span>
            }
        </td>
        <td>
            @if (user.AccountAppointment != null)
            {
                <span>@user.AccountAppointment.Name</span>
            }
        </td>
        <td>
            <a href="@Url.Action("Change", new { Id = user.Id })"><span class="glyphicon glyphicon-edit"></span></a>
        </td>
    </tr>
    }
</table>

}
else
{
<h3>По вашему запросу ничего не найдено</h3>
}



