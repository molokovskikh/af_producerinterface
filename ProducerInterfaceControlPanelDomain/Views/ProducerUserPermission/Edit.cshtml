@model ProducerInterfaceCommon.ContextModels.ProducerUser
@{
    ViewBag.Title = "Редактирования прав (Продисер интерфейс)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование прав пользователя @Model.Name </h2>

<hr />

@using (Html.BeginForm("EditUserPermission", "ProducerUserPermission", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.Name)

<div class="form-group">
    @Html.EditorFor(m => m.ListSelectedPermission)
</div>

<div class="form-group">
    <input type="submit" class="btn btn-primary" value="Сохранить"/>
</div>
}

@section Scripts
{  
<script src="~/Content/Chosen/js/chosen.jquery.js"></script>
<link href="~/Content/Chosen/css/chosen.css" rel="stylesheet" />
<script src="~/Content/Chosen/js/initChangeGroupPermissionProducerUser.js"></script>
}